<% include ./partials/header %>
<div class="ui main text container segment">
  <div class="ui huge header">
<%=    blog.title  %>
  </div>

  <form class="ui form"  >
    <div class="field">
<div class="image">
      <img class="ui centered rounded image" src="<%= blog.image %>" alt="">
    </div>
      <span align='center'>
      <%= blog.created.toDateString() %></span>
    </div>

      <div class="description">
        <label>DESCRIPTION</label><br>
<label>Description</label>
<span><%- blog.body %></span>
          </div>

  </form>
  <hr>
  <div>
  <button type="button" class="ui Olive basic button" name="button" style="display:inline">
    <a href="/blog/<%= blog._id %>/edit">HIT ME TO UPDATE</a>

  </button>
  <form style="display:inline" class="ui form" action="/blog/<%= blog._id %>?_method=DELETE" method="post">
    <input type="submit" class="ui red basic button" name="button" value="HIT ME TO DELETE">

    </button>
  </form>
</div>

</div>

<% include ./partials/footer %>
